<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendsApp.DetailsPage">
    
   <StackLayout x:Name="InfoContainer" Orientation="Vertical">
        <Label x:Name="Name" Text="{Binding Name}"></Label>
        <Label x:Name="Address" Text="{Binding Address}"></Label>
        <Label x:Name="PhoneNr" Text="{Binding PhoneNr}"></Label>
        <Label x:Name="Email" Text="{Binding Email}"></Label>
        <Label x:Name="GpsLocation" Text="{Binding GpsLocation}"></Label>
        <Image x:Name="Image" Source="{Binding ImageUrl}"></Image>
        <Label x:Name="Homepage" Text="{Binding HomepageUrl}"></Label>
    </StackLayout>
</ContentPage>